{{#> main title="Sigarillo | Receive"}}
{{#*inline "body"}}
{{#if error}}
    <div class="notification is-warning">
        {{error}}
    </div>
{{/if}}


<h2 class="title is-2">Messages for {{bot.number}}</h2>
{{# each messages as |message|}}
<pre>
From:  {{message.source}}
On:  {{message.timestamp}}
Body: {{message.message.body}}
{{# each message.attachments as |file|}}
Attachment: <a href="/bot/{{../../bot.token}}/files/{{message.source}}/{{message.timestamp}}/{{file.file_name}}">{{file.file_name}}</a>
{{/each}}
</pre>
<br/>
{{/each}}


<a href="/account">Back</a>

{{/inline}}
{{/main}}
